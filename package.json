        "sass-loader": "^10.4.1"
    },
    "dependencies": {
        "@babel/eslint-parser": "^7.21.3",
        "@nuxtjs/eslint-config-typescript": "^12.0.0",
        "@typescript-eslint/parser": "^5.59.0",
        "eslint": "^8.38.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "postcss-html": "^1.5.0",
        "postcss-scss": "^4.0.6",
        "pre-commit": "^1.2.2",
        "prettier": "^2.8.7",
        "stylelint": "^15.5.0",
